<script>
  $(function() {
    $('.lessons').sortable();
  });
</script>

<br />
<div class="booyah-box col-10 offset-1">
    <h1 class="text-center"><%= current_course.title %></h1>
  <br />
  <%= image_tag current_course.image.to_s, class: "mx-auto d-block img-fluid" %>
  <br />

  <div class="text-center">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#newSectionModal">
      Add a new section
    </button>
    <%= link_to 'View course as student', course_path(current_course), class: 'btn btn-warning float-right btn-lg' %>
  </div>

  <br class="clr" />
  <h4 class="text-center">Sections</h4>
  <br />


  <ul class="section">
    <% current_course.sections.each do |section| %>
           <li class="section-li">

        <div class="header">
          <span class="fa fa-ellipsis-v"></span>
          <%= section.title %>
          <button type="button" class="btn btn-primary btn-sm float-right new-lesson-button" data-toggle="modal" data-target="#newLessonModal" data-lesson-url="<%= instructor_section_lessons_path(section) %>">
            Add a new lesson
          </button>
        </div>

        <br class="clr"/>
    <ul class="lessons">
      <% section.lessons.each do |lesson| %>
     <li>
        <b><%= lesson.title %></b>
            -
            <%= lesson.subtitle %>
     </li>
<% end %>
  </ul>
  <br class="clr" />
     </li>
<% end %>
  </ul>

</div>